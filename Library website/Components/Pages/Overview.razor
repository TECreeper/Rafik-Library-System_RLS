                BookTitle = book.Title,



            });
        }
    }

    private void OpenModal()
    {
        newBook = new Book(); // reset form
        ShowModal = true;
    }

    private void CloseModal()
    {
        ShowModal = false;
    }

    private async Task SaveBook()
    {
        // minimal validation: require at least a title or author
        if (string.IsNullOrWhiteSpace(newBook.Title) && string.IsNullOrWhiteSpace(newBook.Author))
        {
            CloseModal();
            return;
        }

        // Logic to save book to DB usually goes here
