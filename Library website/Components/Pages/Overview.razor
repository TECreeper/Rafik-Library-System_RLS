<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />

<div class="dashboard-container">
    <aside class="sidebar">
        <div class="sidebar-header">
            <h3><i class="fa-solid fa-chart-simple"></i> Library Admin</h3>
        </div>

        <div class="search-box-sidebar">
            <i class="fa-solid fa-magnifying-glass"></i>
            <input type="text" placeholder="Search catalog..." />
        </div>

        <nav class="sidebar-nav">
            <p class="nav-label">Navigation</p>
            <a href="#" class="nav-item active"><i class="fa-solid fa-table-columns"></i> Dashboard</a>
            <a href="/books" class="nav-item"><i class="fa-solid fa-book"></i> Books</a>
            <a href="/members" class="nav-item"><i class="fa-solid fa-users"></i> Members</a>
            <a href="/borrow" class="nav-item"><i class="fa-solid fa-arrow-right-arrow-left"></i> Borrow & Returns</a>
            <p class="nav-label">Alerts</p>
            <a href="/overdue" class="nav-item alert-link">
                <i class="fa-solid fa-circle-exclamation"></i> Overdues
            </a>
        </nav>
    </aside>

    <main class="main-content">
        <header class="top-bar">
            <div class="breadcrumbs">
                <h2>Library Management Dashboard</h2>
                <span>Home > Dashboard</span>
            </div>
            <div class="user-actions">
                <div class="search-top">
                    <i class="fa-solid fa-magnifying-glass"></i>
                    <input type="text" placeholder="Search books, members..." />
                </div>
                <button class="icon-btn"><i class="fa-regular fa-bell"></i></button>
                <div class="user-profile">
                    <img src="https://ui-avatars.com/api/?name=Al+Rafi&background=0D8ABC&color=fff" alt="User" />
                    <div class="user-info">
                        <span class="name">AL Rafi</span>
                        <span class="role">Head Librarian</span>
                    </div>
                </div>
            </div>
        </header>

        <div class="content-grid">

            <div class="stats-row">
                <div class="stat-card">
                    <div class="stat-header">Total Books <i class="fa-solid fa-book"></i></div>
                    <div class="stat-value">@totalBookCount</div>
                    <div class="stat-sub">Cataloged items</div>
                </div>
                <div class="stat-card">
                    <div class="stat-header">Borrowed Books <i class="fa-regular fa-bookmark"></i></div>
                    <div class="stat-value">@BorrowedCount</div>
                </div>
                <div class="stat-card">
                    <div class="stat-header">Overdue Books <i class="fa-regular fa-clock"></i></div>
                    <div class="stat-value">@OverdueList.Count</div>
                    <div class="stat-badge orange">Action needed</div>
                </div>
                <div class="stat-card">
                    <div class="stat-header">Total Members <i class="fa-solid fa-users"></i></div>
                    <div class="stat-value">@totalMemberCount</div>
                    <div class="stat-sub">All registered</div>
                </div>
                <div class="action-buttons">
                    <button class="btn btn-outline" @onclick="OpenModal">
                        <i class="fa-solid fa-plus"></i> Add Book
                    </button>
                </div>
            </div>

            <div class="alert-banner">
                <i class="fa-solid fa-triangle-exclamation"></i>
                <span><strong>Overdue spike:</strong> @OverdueList.Count books overdue for 14+ days. Consider sending reminders.</span>
            </div>

            <div class="charts-row">
                <div class="card chart-card">
                    <div class="card-header">
                        <h3>Borrowed vs. Available</h3> <div class="legend">
                            <span class="dot blue"></span> Borrowed
                            <span class="dot orange"></span> Available
                        </div>
                    </div>
                    <div class="chart-placeholder line-chart-mockup">
                        <div class="line-mock blue-line"></div>

                        <div class="line-mock orange-line"></div>

                        <div class="months">
                            <span>Jan</span><span>Feb</span><span>Mar</span><span>Apr</span><span>May</span><span>Jun</span>
                        </div>
                    </div>
                </div>

                <div class="card chart-card">
                    <div class="card-header">
                        <h3>Books per Category</h3>
                        <div class="legend-tags">
                            <span class="tag">Fiction</span>
                            <span class="tag">Academic</span>
                        </div>
                    </div>
                    <div class="chart-placeholder bar-chart-mockup">
                        <div class="bar" style="height: 60%; background: #007bff;"></div>
                        <div class="bar" style="height: 40%; background: #ffc107;"></div>
                        <div class="bar" style="height: 80%; background: #28a745;"></div>
                        <div class="bar" style="height: 30%; background: #fd7e14;"></div>
                        <div class="bar" style="height: 50%; background: #dc3545;"></div>
                    </div>
                    <div class="months bar-labels">
                        <span>Fic</span><span>NonFic</span><span>Kids</span><span>Acad</span><span>Other</span>
                    </div>
                </div>
            </div>

            <div class="lists-row">
                <div class="card">
                    <div class="card-header">
                        <h3><i class="fa-regular fa-star"></i> Most Borrowed Books</h3>
                        <span class="sub-text">Top 5 by count</span>
                    </div>
                </div>

                <div class="card">
                    <div class="card-header">
                        <h3>Recently Added Books</h3>
                    </div>
                    <div class="recently-added-section">
                        <div class="books-grid">
                            @foreach (var book in Books)
                            {
                                <div class="list-item ">
                                    <h4 class="title">@book.Title</h4>
                                    <p>By: @book.Author</p>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </main>
</div>
@if (ShowModal)
{
    <div class="modal-overlay">
        <div class="modal-box">
            <div class="modal-header">
                <h3>Add New Book</h3>
                <button class="close-btn" @onclick="CloseModal"><i class="fa-solid fa-xmark"></i></button>
            </div>

            <div class="modal-body">
                <div class="input-group">
                    <label>Title</label>
                    <input type="text" class="form-control" placeholder="Book Name" @bind="newBook.Title" />
                </div>
                <div class="input-group">
                    <label>Author</label>
                    <input type="text" class="form-control" placeholder="Author Name" @bind="newBook.Author" />
                </div>
                <div class="row-2">
                    <div class="input-group">
                        <label>ID</label>
                        <input type="text" class="form-control" placeholder="ID" />
                    </div>
                    <div class="input-group">
                        <label>Category</label>
                        <select class="form-control"><option>Fiction</option><option>Science</option></select>
                    </div>
                </div>
            </div>

            <div class="modal-footer">
                <button class="btn btn-outline" @onclick="CloseModal">Cancel</button>
                <button class="btn btn-primary" @onclick="SaveBook">Save</button>
            </div>
        </div>
    </div>
}

