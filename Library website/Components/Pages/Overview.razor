@code {
    private int BorrowedCount = 0;
    private List<Book> Books = new List<Book>();
    private List<Member> Members = new List<Member>();
    private Book newBook = new Book();
    private bool ShowModal = false;
    private int totalBookCount = 0;
    private int totalMemberCount = 0;
    private string searchTerm = "";

    // 1. متغير للتحكم في الوضع
    private bool isDarkMode = false;
    private bool _isInitialized = false;

    private IEnumerable<Book> FilteredBooks
    {
        get
        {
            if (string.IsNullOrWhiteSpace(searchTerm)) return Books.Take(3);
            return Books.Where(b => (b.Title != null && b.Title.Contains(searchTerm, StringComparison.OrdinalIgnoreCase)) ||
                                    (b.Author != null && b.Author.Contains(searchTerm, StringComparison.OrdinalIgnoreCase)) ||
                                    b.Id.ToString().Contains(searchTerm)).Take(3);
        }
    }

    private IEnumerable<Member> FilteredMembers
    {
        get
        {
            if (string.IsNullOrWhiteSpace(searchTerm)) return Enumerable.Empty<Member>();
            return Members.Where(m => (m.Name != null && m.Name.Contains(searchTerm, StringComparison.OrdinalIgnoreCase)) ||
                                      (m.MobileNumber != null && m.MobileNumber.Contains(searchTerm, StringComparison.OrdinalIgnoreCase)) ||
                                      (m.Email != null && m.Email.Contains(searchTerm, StringComparison.OrdinalIgnoreCase)) ||
                                      m.Id.ToString().Contains(searchTerm)).Take(3);
        }
    }

    public class OverdueModel { public string BookTitle { get; set; } = ""; }
    List<OverdueModel> OverdueList = new List<OverdueModel>();

    protected override async Task OnInitializedAsync()
    {
        BorrowedCount = await BookService.GetCountBorrowingAsync(true);
        totalBookCount = await BookService.GetTotalBooksAsync();
        totalMemberCount = await MemberService.GetTotalMembersAsync();

        var loadedBooks = await BookService.GetBooksAsync();
        if (loadedBooks != null) Books = loadedBooks.OrderByDescending(b => b.Id).ToList();

        var loadedMembers = await MemberService.GetMembersAsync();
        if (loadedMembers != null) Members = loadedMembers;

        await CalculateOverdueData();
    }

    // 2. دالة تشغيل عند الرندر الأول لاسترجاع الثيم المحفوظ
    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender && !_isInitialized)
        {
            _isInitialized = true;
            // التحقق من الـ LocalStorage إذا كان هناك ثيم محفوظ
            var theme = await JSRuntime.InvokeAsync<string>("localStorage.getItem", "theme");
            if (theme == "dark")
            {
                isDarkMode = true;
                // تطبيق الثيم فوراً
                await JSRuntime.InvokeVoidAsync("document.documentElement.setAttribute", "data-theme", "dark");
                StateHasChanged(); // تحديث الأيقونة
            }
        }
    }

    private async Task CalculateOverdueData()
    {
        var rawOverdueBooks = await BookService.GetOverdueBooksAsync();
        OverdueList.Clear();
        if (rawOverdueBooks != null)
        {
            foreach (var book in rawOverdueBooks)
            {
                OverdueList.Add(new OverdueModel { BookTitle = book.Title });
            }
        }
    }

    private void OpenModal() { newBook = new Book(); ShowModal = true; }
    private void CloseModal() { ShowModal = false; }

    private async Task SaveBook()
    {
        if (string.IsNullOrWhiteSpace(newBook.Title) || string.IsNullOrWhiteSpace(newBook.Author))
        {
            await JSRuntime.InvokeVoidAsync("alert", "Please enter a Title and Author.");
            return;
        }

        try
        {
            await BookService.AddBookAsync(newBook);
            Books.Insert(0, newBook);
            totalBookCount++;
            newBook = new Book();
            CloseModal();
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("alert", "Error saving book: " + ex.Message);
        }
    }

    // 3. دالة تبديل الوضع المعدلة (تحفظ في LocalStorage)
    private async Task ToggleDarkMode()
    {
        isDarkMode = !isDarkMode;
        var theme = isDarkMode ? "dark" : "light";

        // تغيير الثيم
        await JSRuntime.InvokeVoidAsync("document.documentElement.setAttribute", "data-theme", theme);

        // حفظ الثيم في المتصفح
        await JSRuntime.InvokeVoidAsync("localStorage.setItem", "theme", theme);
    }
}
