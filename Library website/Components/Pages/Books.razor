@page "/books"
@inject IJSRuntime JSRuntime
@using MyLibraryApp.Models
@using MyLibraryApp.Data
@inject BookService BookService
@using Library_website.Components.Layout
@rendermode InteractiveServer
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
@layout EmptyLayout
<div class="dashboard-container">
    <aside class="sidebar">
        <div class="sidebar-header">
            <h3><i class="fa-solid fa-chart-simple"></i> Library Admin</h3>
        </div>

        <div class="search-box-sidebar">
            <i class="fa-solid fa-magnifying-glass"></i>
            <input type="text" placeholder="Search catalog..." />
        </div>

        <nav class="sidebar-nav">
            <p class="nav-label">Navigation</p>
            <a href="/" class="nav-item"><i class="fa-solid fa-table-columns"></i> Dashboard</a>
            <a href="#" class="nav-item active"><i class="fa-solid fa-book"></i> Books</a>
            <a href="/members" class="nav-item"><i class="fa-solid fa-users"></i> Members</a>
            <a href="/borrow" class="nav-item"><i class="fa-solid fa-arrow-right-arrow-left"></i> Borrow & Returns</a>
            <p class="nav-label">Alerts</p>
            <a href="/overdue" class="nav-item alert-link">
                <i class="fa-solid fa-circle-exclamation"></i> Overdues
            </a>
        </nav>
    </aside>

    <main class="main-content">
        <header class="top-bar">
            <div class="breadcrumbs">
                <h2>Books Catalog</h2>
                <span>Home > Books</span>
            </div>
            <div class="user-actions">
                <button @onclick="OpenModal" class="btn btn-primary"><i class="fa-solid fa-plus"></i> Add New Book</button>
            </div>

        </header>

        <div class="filter-bar">
            <div class="search-wrapper">
                <i class="fa-solid fa-magnifying-glass"></i>
                <input type="text" placeholder="Search by title, author, ISBN..." />
            </div>
            <div class="filter-actions">
                <select class="form-select">
                    <option>All Categories</option>
                    <option>Fiction</option>
                    <option>Science</option>
                </select>
                <select class="form-select">
                    <option>All Status</option>
                    <option>Available</option>
                    <option>Borrowed</option>
                </select>
            </div>
        </div>

        <div class="card table-card">
            <table class="styled-table">
                <thead>
                    <tr>
                        <th>Title</th>
                        <th>Author</th>
                        <th>Category</th>
                        <th>ISBN</th>
                        <th>Status</th>
                        <th style="text-align:center;">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var book in books)
                    {
                        <tr>
                            <td>
                                <div class="book-info-cell">
                                    <div class="book-icon"><i class="fa-solid fa-book-open"></i></div>
                                    <span class="book-title">@book.Title</span>
                                </div>
                            </td>
                            <td>@book.Author</td>
                            <td><span class="category-tag">@book.Categyry</span></td>
                            <td class="Id">@book.Id</td>
                            <td>
                                @if (book.IsBorrowed && book.DueDate < DateTime.Now)
                                {
                                    <span class="status-badge red">Overdue</span>
                                }
                                else if (book.IsBorrowed)
                                {
                                    <span class="status-badge orange">Borrowed</span>


                                }
                                else
                                {
                                    <span class="status-badge green">Available</span>

                                }
                            </td>
                            <td class="actions-cell">
                                <button class="action-btn edit"><i class="fa-solid fa-pen"></i></button>

                                <button class="action-btn delete" @onclick="() => DeleteBook(book.Id)">
                                    <i class="fa-solid fa-trash"></i>
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

            <div class="pagination">
                <span>Showing 1-5 of 48,320</span>
                <div class="page-buttons">
                    <button disabled>&lt;</button>
                    <button class="active">1</button>
                    <button>2</button>
                    <button>3</button>
                    <button>&gt;</button>
                </div>
            </div>
        </div>
    </main>
</div>

@if (ShowModal)
{
    <div class="modal-overlay">
        <div class="modal-box">
            <div class="modal-header">
                <h3>Add New Book</h3>
                <button class="close-btn" @onclick="CloseModal"><i class="fa-solid fa-xmark"></i></button>
            </div>

            <div class="modal-body">
                <div class="input-group">
                    <label>Title</label>
                    <input @bind="newBook.Title " type="text" class="form-control" placeholder="Book Name" />
                </div>
                <div class="input-group">
                    <label>Author</label>
                    <input @bind="newBook.Author" type="text" class="form-control" placeholder="Author Name" />
                </div>
                <div class="row-2">
                    <div class="input-group">
                        <label>Book ID</label>
                        <input type="text" class="form-control" placeholder="Book_ID" />
                    </div>
                    <div class="input-group">
                        <label>Category</label>
                        <select class="form-control" @bind="newBook.Categyry">
                            <option value="">Select Category</option>
                            <option value="Fiction">Fiction</option>
                            <option value="Science">Science</option>
                            <option value="Sci-Fi">Sci-Fi</option>
                        </select>

                    </div>
                </div>
            </div>

            <div class="modal-footer">
                <button class="btn btn-outline" @onclick="CloseModal">Cancel</button>
                <button class="btn btn-outline" @onclick="AddNewBook">Add Book</button>
            </div>
        </div>
    </div>
}

