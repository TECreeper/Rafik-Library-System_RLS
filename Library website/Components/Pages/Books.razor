<div class="dashboard-container">
    <aside class="sidebar">
        <div class="sidebar-header">
            <h3><i class="fa-solid fa-chart-simple"></i> Library Admin</h3>
        </div>
        
        <nav class="sidebar-nav">
            <p class="nav-label">Navigation</p>
            <a href="/" class="nav-item"><i class="fa-solid fa-table-columns"></i> Dashboard</a>
            <a href="#" class="nav-item active"><i class="fa-solid fa-book"></i> Books</a>
            <a href="/members" class="nav-item"><i class="fa-solid fa-users"></i> Members</a>
            <a href="/borrow" class="nav-item"><i class="fa-solid fa-arrow-right-arrow-left"></i> Borrow & Returns</a>
            <p class="nav-label">Alerts</p>
            <a href="/overdue" class="nav-item alert-link">
                <i class="fa-solid fa-circle-exclamation"></i> Overdues
            </a>
        </nav>
    </aside>

    <main class="main-content">
        <header class="top-bar">
            <div class="breadcrumbs">
                <h2>Books Catalog</h2>
                <span>Home > Books</span>
            </div>
            <div class="user-actions">
                <button class="icon-btn" @onclick="ToggleDarkMode" title="Toggle Dark Mode">
                    @if (isDarkMode)
                    {
                        <i class="fa-solid fa-sun" style="color: #ffc107;"></i>
                    }
                    else
                    {
                        <i class="fa-solid fa-moon"></i>
                    }
                </button>
                <button @onclick="OpenAddModal" class="btn btn-primary"><i class="fa-solid fa-plus"></i> Add New Book</button>
            </div>
        </header>

        <div class="filter-bar">
            <div class="search-wrapper">
                <i class="fa-solid fa-magnifying-glass"></i>
                <input type="text" placeholder="Search by title, author, ID..." @bind="SearchTerm" @bind:event="oninput" />
            </div>
            <div class="filter-actions">
                
                <select class="form-select" @bind="SelectedCategory">
                    <option value="All Categories">All Categories</option>
                    @if (cats != null)
                    {
                        @foreach (var category in cats)
                        {
                            <option value="@category">@category</option>
                        }
                    } 
                </select>
                <select class="form-select" @bind="SelectedStatus">
                    <option value="All Status">All Status</option>
                    <option value="Available">Available</option>
                    <option value="Borrowed">Borrowed</option>
                </select>
            </div>
        </div>

        <div class="card table-card">
            <table class="styled-table">
                <thead>
                    <tr>
                        <th>Title</th>
                        <th>Author</th>
                        <th>Category</th>
                        <th>ID</th>
                        <th>Status</th>
                        <th style="text-align:center;">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (PagedBooks.Any())
                    {
                        @foreach (var book in PagedBooks)
                        {
                            <tr>
                                <td>
                                    <div class="book-info-cell">
                                        <div class="book-icon"><i class="fa-solid fa-book-open"></i></div>
                                        <span class="book-title">@book.Title</span>
                                    </div>
                                </td>
                                <td>@book.Author</td>
                                <td><span class="category-tag">@book.Categyry</span></td>
                                <td class="isbn">@book.Id</td>
                                <td>
                                    @if (book.IsBorrowed && book.DueDate < DateTime.Now)
                                    {
                                        <span class="status-badge red">Overdue</span>
                                    }
                                    else if (book.IsBorrowed)
                                    {
                                        <span class="status-badge orange">Borrowed</span>
                                    }
                                    else
                                    {
                                        <span class="status-badge green">Available</span>
                                    }
                                </td>
                                <td class="actions-cell">
                                    <button class="action-btn edit" @onclick="() => OpenEditModal(book)">
                                        <i class="fa-solid fa-pen"></i>
                                    </button>
                                    <button class="action-btn delete" @onclick="() => DeleteBook(book.Id)">
                                        <i class="fa-solid fa-trash"></i>
                                    </button>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="6" style="text-align:center; padding: 20px; color: #888;">
                                No books found matching your criteria.
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

            <div class="pagination">
                <span>Showing @StartItemIndex - @EndItemIndex of @TotalFilteredItems</span>
                <div class="page-buttons">
                    <button @onclick="PrevPage" disabled="@(CurrentPage == 1)">&lt;</button>

                    @for(int i = 1; i <= TotalPages; i++)
                    {
                        int pageNumber = i;
                        <button class="@(CurrentPage == pageNumber ? "active" : "")"
                                @onclick="() => ChangePage(pageNumber)">
                            @pageNumber
                        </button>
                    }

                    <button @onclick="NextPage" disabled="@(CurrentPage == TotalPages || TotalPages == 0)">&gt;</button>
                </div>
            </div>
        </div>
    </main>
</div>

@if (ShowModal)
{
    <div class="modal-overlay">
        <div class="modal-box">
            <div class="modal-header">
                <h3>@(newBook.Id == 0 ? "Add New Book" : "Edit Book")</h3>
                <button class="close-btn" @onclick="CloseModal"><i class="fa-solid fa-xmark"></i></button>
            </div>

            <div class="modal-body">
                <div class="input-group">
                    <label>Title</label>
                    <input @bind="newBook.Title" type="text" class="form-control" placeholder="Book Name" />
                </div>
                <div class="input-group">
                    <label>Author</label>
                    <input @bind="newBook.Author" type="text" class="form-control" placeholder="Author Name" />
                </div>
                <div class="row-2">
                    <div class="input-group">
                        <label>Book ID</label>
                        <input type="text" class="form-control" value="@(newBook.Id == 0 ? "Auto" : newBook.Id)" disabled />
                    </div>
                    <div class="input-group">
                        <label>Category</label>
                        <input type="text" class="form-control" @bind="newBook.Categyry" placeholder="Category" />
                    </div>
                </div>
            </div>

            <div class="modal-footer">
                <button class="btn btn-outline" @onclick="CloseModal">Cancel</button>
                <button class="btn btn-outline" @onclick="SaveBook">
                    @(newBook.Id == 0 ? "Add Book" : "Update Book")
                </button>
            </div>
        </div>
    </div>
}

@code {
    private List<Book> allBooks = new List<Book>();
    private Book newBook = new Book();
    private bool ShowModal = false;
    private int totalcats ; //total categories
    public List<string> cats { get; set; } = new List<string>();    // -- Filter & Pagination State --
    private string _searchTerm = "";
    public string SearchTerm
    {
        get => _searchTerm;
        set { _searchTerm = value; CurrentPage = 1; }
    }

    private string _selectedCategory = "All Categories";
    public string SelectedCategory
    {
        get => _selectedCategory;
        set { _selectedCategory = value; CurrentPage = 1; }
    }

    private string _selectedStatus = "All Status";
    public string SelectedStatus
    {
        get => _selectedStatus;
        set { _selectedStatus = value; CurrentPage = 1; }
    }

    public int CurrentPage { get; set; } = 1;
    private const int PageSize = 10;

    // -- Computed Properties for UI --
    private IEnumerable<Book> FilteredBooks
    {
        get
        {
            var query = allBooks.AsEnumerable();

            // 1. Search Filter
            if (!string.IsNullOrWhiteSpace(SearchTerm))
            {
                query = query.Where(b =>
                    (b.Title != null && b.Title.Contains(SearchTerm, StringComparison.OrdinalIgnoreCase)) ||
                    (b.Author != null && b.Author.Contains(SearchTerm, StringComparison.OrdinalIgnoreCase)) ||
                    b.Id.ToString().Contains(SearchTerm));
            }

            // 2. Category Filter
            if (SelectedCategory != "All Categories")
            {
                query = query.Where(b => b.Categyry == SelectedCategory);
            }

            // 3. Status Filter
            if (SelectedStatus != "All Status")
            {
                if (SelectedStatus == "Available")
                    query = query.Where(b => !b.IsBorrowed);
                else if (SelectedStatus == "Borrowed")
                    query = query.Where(b => b.IsBorrowed);
            }

            // 4. Sort by ID (Ascending)
            return query.OrderBy(b => b.Id);
        }
    }

    private IEnumerable<Book> PagedBooks => FilteredBooks
                                            .Skip((CurrentPage - 1) * PageSize)
                                            .Take(PageSize);

    private int TotalFilteredItems => FilteredBooks.Count();
    private int TotalPages => (int)Math.Ceiling((double)TotalFilteredItems / PageSize);
    private int StartItemIndex => TotalFilteredItems == 0 ? 0 : (CurrentPage - 1) * PageSize + 1;
    private int EndItemIndex => Math.Min(CurrentPage * PageSize, TotalFilteredItems);

    protected override async Task OnInitializedAsync()
    {
        totalcats = await BookService.GetTotalCategoriesAsync();
        
            cats = await BookService.GetAllCatsAsync();
        

        await LoadBooks();
    }


 
    private async Task LoadBooks()
    {
        var dbBooks = await BookService.GetBooksAsync();
        if (dbBooks != null)
        {
            allBooks = dbBooks;
        }
    }

    private void NextPage()
    {
        if (CurrentPage < TotalPages) CurrentPage++;
    }

    private void PrevPage()
    {
        if (CurrentPage > 1) CurrentPage--;
    }

    private void ChangePage(int page)
    {
        CurrentPage = page;
    }

    private void OpenAddModal()
    {
        newBook = new Book();
        ShowModal = true;
    }

    private void OpenEditModal(Book bookToEdit)
    {
        newBook = new Book
        {
            Id = bookToEdit.Id,
            Title = bookToEdit.Title,
            Author = bookToEdit.Author,
            Categyry = bookToEdit.Categyry,
            IsBorrowed = bookToEdit.IsBorrowed,
            DueDate = bookToEdit.DueDate
        };
        ShowModal = true;
    }

    private void CloseModal()
    {
        ShowModal = false;
    }

    private async Task SaveBook()
    {
        if (string.IsNullOrWhiteSpace(newBook.Title) || string.IsNullOrWhiteSpace(newBook.Author)|| string.IsNullOrWhiteSpace(newBook.Categyry))
        {
            await JSRuntime.InvokeVoidAsync("alert", "Please enter Title, Author and Categorey.");
            return;
        }

        try
        {
            if (newBook.Id == 0)
            {
                await BookService.AddBookAsync(newBook);
            }
            else
            {
                await BookService.UpdateBookAsync(newBook);
            }

            await LoadBooks();
            CloseModal();
            newBook = new Book();
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("alert", $"Error: {ex.Message}");
        }
    }

    private async Task DeleteBook(int id)
    {
        bool confirmed = await JSRuntime.InvokeAsync<bool>("confirm", "Are you sure you want to delete this book?");
        if (confirmed)
        {
            await BookService.DeleteBookAsync(id);
            await LoadBooks();

            if (CurrentPage > TotalPages && CurrentPage > 1)
            {
                CurrentPage--;
            }
        }
    }

    // ==========================================
    // === هذا هو الجزء الخاص بالـ Dark Mode ====
    // ==========================================

    private bool isDarkMode = false;

    // هذه الدالة تعمل فور انتهاء تحميل الصفحة في المتصفح
    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            // 1. نسأل المتصفح: هل المستخدم اختار الوضع الليلي سابقاً؟
            var theme = await JSRuntime.InvokeAsync<string>("localStorage.getItem", "theme");

            // 2. إذا كانت الإجابة "نعم"، نقوم بتحديث المتغير والأيقونة
            if (theme == "dark")
            {
                isDarkMode = true;

                // أمر مهم جداً: نخبر الصفحة بأن تعيد رسم نفسها لتغيير الأيقونة من قمر لشمس
                StateHasChanged();
            }
        }
    }

    private async Task ToggleDarkMode()
    {
        isDarkMode = !isDarkMode;
        var theme = isDarkMode ? "dark" : "light";

        // 1. تغيير الألوان في الصفحة
        await JSRuntime.InvokeVoidAsync("document.documentElement.setAttribute", "data-theme", theme);

        // 2. حفظ الاختيار في الذاكرة (لكي يعمل في الصفحات الأخرى)
        await JSRuntime.InvokeVoidAsync("localStorage.setItem", "theme", theme);
    }
}

