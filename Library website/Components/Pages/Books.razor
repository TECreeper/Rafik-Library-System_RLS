@code {
    private List<Book>? books;
    private Book newBook = new Book();

    protected override async Task OnInitializedAsync()
    {
        await LoadBooks();
    }

    private async Task LoadBooks()
    {
        books = await BookService.GetBooksAsync();
    }

    private async Task AddNewBook()
    {
        if (string.IsNullOrWhiteSpace(newBook.Title))
        {
            await JSRuntime.InvokeVoidAsync("alert", "Please enter the books's name.");
            return;
        }
        if (string.IsNullOrWhiteSpace(newBook.Author))
        {
            await JSRuntime.InvokeVoidAsync("alert", "Please enter the authors's name.");
            return;
        }

        await BookService.AddBookAsync(newBook);
        newBook = new Book(); // Reset form
        await LoadBooks(); // Refresh list
    }

    private async Task DeleteBook(int id)
    {
        bool confirmed = await JSRuntime.InvokeAsync<bool>("confirm", "Are you sure you want to delete this book?");

        if (confirmed)
        {
            await BookService.DeleteBookAsync(id);
            await LoadBooks();
            CloseModal();
        }
    }
}