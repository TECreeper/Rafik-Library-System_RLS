        border: 1px solid var(--border-color);
        text-align: center;
    }

    .input-group {
        margin-bottom: 15px;
        text-align: left;
    }

        .input-group label {
            display: block;
            margin-bottom: 5px;
            color: var(--text-main);
            font-weight: bold;
            font-size: 0.9rem;
        }

    .form-control {
        width: 100%;
        padding: 10px;
        border-radius: 8px;
        border: 1px solid var(--border-color);
        background: var(--input-bg);
        color: var(--text-main);
    }

    .login-btn {
        width: 100%;
        padding: 12px;
        margin-top: 10px;
        cursor: pointer;
        border-radius: 8px;
        border: none;
        background: var(--primary);
        color: white;
        font-weight: bold;
    }

    .login-footer {
        margin-top: 20px;
        font-size: 0.9rem;
    }

    .alert-box {
        padding: 10px;
        border-radius: 8px;
        margin-bottom: 15px;
