@page "/Signup"
@layout Library_website.Components.Layout.LoginLayout
@inject MyLibraryApp.Data.UserService UserService
@inject NavigationManager NavManager
@rendermode InteractiveServer
@using MyLibraryApp.Models

<div class="login-box">
    <div class="login-header">
        <h2>Create Account</h2>
        <p>Join our Library System</p>
    </div>

    <div class="login-form">
        @if (!string.IsNullOrEmpty(Message))
        {
            <div class="alert-box @(IsSuccess ? "success" : "error")">
                @Message
            </div>
        }

        <div class="input-group">
            <label>Full Name</label>
            <input type="text" class="form-control" placeholder="Your Name" @bind="newUser.FullName" />
        </div>

        <div class="input-group">
            <label>Email</label>
            <input type="email" class="form-control" placeholder="example@mail.com" @bind="newUser.Email" />
        </div>

        <div class="input-group">
            <label>Password</label>
            <input type="password" class="form-control" placeholder="******" @bind="newUser.Password" />
        </div>

        <button class="btn btn-primary login-btn" @onclick="ExecuteSignup">Sign Up</button>

        <div class="login-footer">
            <a href="/">Already have an account? Sign In</a>
        </div>
    </div>
</div>

@code {
    private User newUser = new User();
    private string Message = "";
    private bool IsSuccess = false;

    private async Task ExecuteSignup()
    {
        if (string.IsNullOrWhiteSpace(newUser.Email) || string.IsNullOrWhiteSpace(newUser.Password))
        {
            Message = "Please fill all fields."; IsSuccess = false; return;
        }

        var result = await UserService.RegisterUserAsync(newUser);

        if (result == "Success")
        {
            IsSuccess = true;
            Message = "Account created! Redirecting...";
            await Task.Delay(2000);
            NavManager.NavigateTo("/");
        }
        else
        {
            IsSuccess = false;
            Message = result;
        }
    }
}

