@page "/members"
@inject IJSRuntime JSRuntime
@using Library_website.Components.Layout
@layout EmptyLayout
@using MyLibraryApp.Models
@using MyLibraryApp.Data
@inject MemberService MemberService
@rendermode InteractiveServer

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />

<div class="dashboard-container">

    <aside class="sidebar">
        <div class="sidebar-header">
            <h3><i class="fa-solid fa-chart-simple"></i> Library Admin</h3>
        </div>

        <nav class="sidebar-nav">
            <p class="nav-label">Navigation</p>
            <a href="/" class="nav-item"><i class="fa-solid fa-table-columns"></i> Dashboard</a>
            <a href="/books" class="nav-item"><i class="fa-solid fa-book"></i> Books</a>
            <a href="#" class="nav-item active"><i class="fa-solid fa-users"></i> Members</a>
            <a href="/borrow" class="nav-item"><i class="fa-solid fa-arrow-right-arrow-left"></i> Borrow & Returns</a>
            <p class="nav-label">Alerts</p>
            <a href="/overdue" class="nav-item alert-link">
                <i class="fa-solid fa-circle-exclamation"></i> Overdues
            </a>
        </nav>
    </aside>

    <main class="main-content">

        <header class="top-bar">
            <div class="breadcrumbs">
                <h2>Members Management</h2>
                <span>Home > Members</span>
            </div>
            <div class="user-actions">
                <button class="icon-btn" @onclick="ToggleDarkMode" title="Toggle Dark Mode">
                    @if (isDarkMode)
                    {
                        <i class="fa-solid fa-sun" style="color: #ffc107;"></i>
                    }
                    else
                    {
                        <i class="fa-solid fa-moon"></i>
                    }
                </button>
                <button type="button" @onclick="OpenAddModal" class="btn btn-primary"><i class="fa-solid fa-user-plus"></i> Add New Member</button>
            </div>
        </header>

        <div class="filter-bar">
            <div class="search-wrapper">
                <i class="fa-solid fa-magnifying-glass"></i>
                <input type="text" placeholder="Search by Name, ID, National ID, Mobile..." @bind="SearchTerm" @bind:event="oninput" />
            </div>
            <div class="filter-actions">
                <select class="form-select" @bind="SelectedRole">
                    <option value="All Roles">All Roles</option>
                    <option value="Admin">Admin</option>
                    <option value="Member">Member</option>
                </select>
            </div>
        </div>

        <div class="card table-card">
            <table class="styled-table">
                <thead>
                    <tr>
                        <th>Member (ID)</th>
                        <th>Contact Info</th>
                        <th>Role</th>
                        <th style="text-align:center;">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (PagedMembers.Any())
                    {
                        @foreach (var member in PagedMembers)
                        {
                            <tr>
                                <td>
                                    <div class="member-profile">
                                        <img src="@($"https://ui-avatars.com/api/?name={member.Name}&background=random&color=fff")" class="avatar" />
                                        <div class="info">
                                            <span class="name">@member.Name</span>
                                            <span class="id">ID: @member.Id</span>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <div class="contact-info">
                                        <div><i class="fa-regular fa-envelope"></i> @member.Email</div>
                                        <div><i class="fa-solid fa-phone"></i> @member.MobileNumber</div>
                                    </div>
                                </td>
                                <td><span class="role-tag">@member.Role</span></td>
                                <td class="actions-cell">
                                    <button type="button" class="action-btn edit" @onclick="() => OpenEditModal(member)">
                                        <i class="fa-solid fa-pen"></i>
                                    </button>

                                    <button class="action-btn delete" @onclick="() => DeleteMember(member.Id)">
                                        <i class="fa-solid fa-trash"></i>
                                    </button>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="4" style="text-align:center; padding:20px; color:#888;">
                                No members match your search criteria.
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

            <div style="padding: 15px 20px; display: flex; justify-content: space-between; align-items: center; border-top: 1px solid #eee;">
                <span style="color: #888; font-size: 0.9rem;">
                    Page @CurrentPage of @TotalPages (@TotalFilteredCount total)
                </span>
                <div style="display: flex; gap: 5px;">
                    <button class="btn btn-outline" style="padding: 5px 10px;" @onclick="PrevPage" disabled="@(CurrentPage == 1)">&lt;</button>
                    <button class="btn btn-outline" style="padding: 5px 10px;" @onclick="NextPage" disabled="@(CurrentPage >= TotalPages)">&gt;</button>
                </div>
            </div>
        </div>
    </main>
</div>

@if (ShowMemberModal)
{
    <div class="modal-overlay">
        <div class="modal-box">
            <div class="modal-header">
                <h3>@(form.Id == 0 ? "Add New Member" : "Edit Member")</h3>
                <button type="button" class="close-btn" @onclick="CloseMemberModal">
                    <i class="fa-solid fa-xmark"></i>
                </button>
            </div>

            <div class="modal-body">
                <div class="input-group">
                    <label>Full Name</label>
                    <input type="text" class="form-control" placeholder="Enter full name" @bind="form.Name" />
                </div>

                <div class="row-2">
                    <div class="input-group">
                        <label>Age</label>
                        <input type="text" class="form-control" placeholder="Age" @bind="form.Age" />
                    </div>

                    <div class="input-group">
                        <label>National ID</label>
                        <input type="text" class="form-control" placeholder="14 Digits ID" @bind="form.NationalId" />
                    </div>

                    <div class="input-group">
                        <label>Role</label>
                        <select class="form-select" @bind="form.Role">
                            <option value="">Select Role</option>
                            <option value="Admin">Admin</option>
                            <option value="Member">Member</option>
                        </select>
                    </div>
                </div>

                <div class="input-group">
                    <label>Mobile</label>
                    <input type="text" class="form-control" placeholder="Mobile number" @bind="form.MobileNumber" />
                </div>

                <div class="input-group">
                    <label>Email</label>
                    <input type="email" class="form-control" placeholder="email@example.com" @bind="form.Email" />
                </div>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-outline" @onclick="CloseMemberModal">Cancel</button>
                <button type="button" class="btn btn-primary" @onclick="SaveMember">
                    @(form.Id == 0 ? "Add Member" : "Update Member")
                </button>
            </div>
        </div>
    </div>
}

@code {
    private class MemberForm
    {
        public int Id { get; set; } = 0;
        public string Name { get; set; } = string.Empty;
        public string NationalId { get; set; } = string.Empty;
        public string Age { get; set; } = string.Empty;
        public string MobileNumber { get; set; } = string.Empty;
        public string Email { get; set; } = string.Empty;
        public string Role { get; set; } = "Member";
    }

    private bool ShowMemberModal = false;
    private List<Member> MembersList = new List<Member>();
    private MemberForm form = new MemberForm();

    // -- Filter & Pagination State --
    private string SearchTerm { get; set; } = "";
    private string SelectedRole { get; set; } = "All Roles";
    private int CurrentPage { get; set; } = 1;
    private const int PageSize = 10; // Max 10 people

    // -- Filter Logic --
    private IEnumerable<Member> FilteredMembers
    {
        get
        {
            var query = MembersList.AsEnumerable();

            // 1. Search Filter (ID, Name, National ID, Mobile, Email)
            if (!string.IsNullOrWhiteSpace(SearchTerm))
            {
                query = query.Where(m =>
                    (m.Name != null && m.Name.Contains(SearchTerm, StringComparison.OrdinalIgnoreCase)) ||
                    (m.Email != null && m.Email.Contains(SearchTerm, StringComparison.OrdinalIgnoreCase)) ||
                    (m.MobileNumber != null && m.MobileNumber.Contains(SearchTerm, StringComparison.OrdinalIgnoreCase)) ||
                    m.NationalId.ToString().Contains(SearchTerm) ||
                    m.Id.ToString().Contains(SearchTerm)
                );
            }

            // 2. Role Filter
            if (SelectedRole != "All Roles")
            {
                query = query.Where(m => m.Role == SelectedRole);
            }

            // 3. Sorting by Role (Admin first, then Member)
            // Then Sort by Name for consistency
            return query.OrderBy(m => m.Role).ThenBy(m => m.Name);
        }
    }

    // -- Pagination Logic --
    private IEnumerable<Member> PagedMembers => FilteredMembers
        .Skip((CurrentPage - 1) * PageSize)
        .Take(PageSize);

    private int TotalFilteredCount => FilteredMembers.Count();
    private int TotalPages => (int)Math.Ceiling((double)TotalFilteredCount / PageSize);

    private void NextPage() { if (CurrentPage < TotalPages) CurrentPage++; }
    private void PrevPage() { if (CurrentPage > 1) CurrentPage--; }

    protected override async Task OnInitializedAsync()
    {
        await LoadMembers();
    }

    private async Task LoadMembers()
    {
        var dbMembers = await MemberService.GetMembersAsync();
        if (dbMembers != null)
        {
            MembersList = dbMembers;
        }
    }

    // -- Modal Actions --
    private void OpenAddModal()
    {
        form = new MemberForm();
        ShowMemberModal = true;
    }

    private void OpenEditModal(Member member)
    {
        form = new MemberForm
        {
            Id = member.Id,
            Name = member.Name,
            NationalId = member.NationalId.ToString(),
            Age = member.Age.ToString(),
            MobileNumber = member.MobileNumber,
            Email = member.Email,
            Role = member.Role
        };
        ShowMemberModal = true;
    }

    private void CloseMemberModal()
    {
        ShowMemberModal = false;
    }

    // -- CRUD Operations --
    private async Task SaveMember()
    {
        if (string.IsNullOrWhiteSpace(form.Name))
        {
            await JSRuntime.InvokeVoidAsync("alert", "Please enter the member's name.");
            return;
        }

        if (!int.TryParse(form.NationalId, out var parsedNationalId) || !int.TryParse(form.Age, out var parsedAge))
        {
            await JSRuntime.InvokeVoidAsync("alert", "National ID and Age must be valid numbers.");
            return;
        }

        var memberToSave = new Member
        {
            Id = form.Id,
            Name = form.Name.Trim(),
            NationalId = parsedNationalId,
            Age = parsedAge,
            MobileNumber = form.MobileNumber?.Trim() ?? string.Empty,
            Email = form.Email?.Trim() ?? string.Empty,
            Role = string.IsNullOrWhiteSpace(form.Role) ? "Member" : form.Role
        };

        try
        {
            if (form.Id == 0)
            {
                await MemberService.AddMemberAsync(memberToSave);
            }
            else
            {
                await MemberService.UpdateMemberAsync(memberToSave);
            }

            await LoadMembers();
            CloseMemberModal();
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("alert", $"Operation failed: {ex.Message}");
        }
    }

    private async Task DeleteMember(int id)
    {
        bool confirmed = await JSRuntime.InvokeAsync<bool>("confirm", "Are you sure you want to delete this member?");
        if (confirmed)
        {
            await MemberService.DeleteMemberAsync(id);
            await LoadMembers();
        }
    }
    // متغير للتحكم في الوضع
    // ... (بقية الكود الخاص بالكتب كما هو) ...

    private bool isDarkMode = false;

    // هذه الدالة تعمل عند فتح الصفحة
    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            // نسأل المتصفح: ما هو الوضع المحفوظ؟
            var theme = await JSRuntime.InvokeAsync<string>("localStorage.getItem", "theme");

            // إذا كان محفوظاً كـ dark، نحدث المتغير ليصبح الزر صحيحاً
            if (theme == "dark")
            {
                isDarkMode = true;
                StateHasChanged(); // تحديث الأيقونة من شمس لقمر
            }
        }
    }

    private async Task ToggleDarkMode()
    {
        isDarkMode = !isDarkMode;
        var theme = isDarkMode ? "dark" : "light";

        // تغيير الـ HTML
        await JSRuntime.InvokeVoidAsync("document.documentElement.setAttribute", "data-theme", theme);

        // حفظ الاختيار في الذاكرة
        await JSRuntime.InvokeVoidAsync("localStorage.setItem", "theme", theme);
    }
}

