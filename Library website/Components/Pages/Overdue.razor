<div class="dashboard-container">

    <aside class="sidebar">
        <div class="sidebar-header">
            <h3><i class="fa-solid fa-chart-simple"></i> Library Admin</h3>
        </div>

        <nav class="sidebar-nav">
            <p class="nav-label">Navigation</p>
            <a href="/" class="nav-item"><i class="fa-solid fa-table-columns"></i> Dashboard</a>
            <a href="/books" class="nav-item"><i class="fa-solid fa-book"></i> Books</a>
            <a href="/members" class="nav-item"><i class="fa-solid fa-users"></i> Members</a>
            <a href="/borrow" class="nav-item"><i class="fa-solid fa-arrow-right-arrow-left"></i> Borrow & Returns</a>

            <p class="nav-label">Alerts</p>
            <a href="/overdue" class="nav-item active alert-link">
                <i class="fa-solid fa-circle-exclamation"></i> Overdues
                <span class="sidebar-badge">@OverdueList.Count</span>
            </a>
        </nav>
    </aside>

    <main class="main-content">

        <header class="top-bar">
            <div class="breadcrumbs">
                <h2>Overdue Books</h2>
                <span>Home > Alerts > Overdue</span>
            </div>
            <div class="user-actions">
            </div>
        </header>

        <div class="stats-grid">
            <div class="card stat-card red-border">
                <div class="stat-icon red-bg"><i class="fa-solid fa-triangle-exclamation"></i></div>
                <div class="stat-info">
                    <span class="label">Total Overdue</span>
                    <span class="value">@OverdueList.Count</span>
                </div>
            </div>

            <div class="card stat-card orange-border">
                <div class="stat-icon orange-bg"><i class="fa-solid fa-clock"></i></div>
                <div class="stat-info">
                    <span class="label">Avg. Delay</span>
                    <span class="value">
                        @(OverdueList.Any() ? (int)OverdueList.Average(x => x.DaysLate) : 0) Days
                    </span>
                </div>
            </div>

            <div class="card stat-card blue-border">
                <div class="stat-icon blue-bg"><i class="fa-solid fa-coins"></i></div>
                <div class="stat-info">
                    <span class="label">Total Fines</span>
                    <span class="value">Egp @OverdueList.Sum(x => x.Fine).ToString("F2")</span>
                </div>
            </div>
        </div>

        <div class="filter-bar">
            <div class="search-wrapper">
                <i class="fa-solid fa-magnifying-glass"></i>
                <input type="text" placeholder="Search by member or book..." @bind="SearchTerm" @bind:event="oninput" />
            </div>
            <div class="filter-actions">
                <select class="form-select" @bind="SelectedDelayFilter">
                    <option value="All Delays">All Delays</option>
                    <option value="1-7 Days">1-7 Days</option>
                    <option value="8-30 Days">8-30 Days</option>
                    <option value="30+ Days">30+ Days (Severe)</option>
                </select>
            </div>
        </div>

        <div class="card table-card">
            <table class="styled-table">
                <thead>
                    <tr>
                        <th>Member Details</th>
                        <th>Book Info</th>
                        <th>Due Date</th>
                        <th>Days Late</th>
                        <th>Fine (Egp)</th>
                        <th>Status</th>
                        <th style="text-align:center;">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (PagedOverdueItems.Any())
                    {
                        @foreach (var item in PagedOverdueItems)
                        {
                            <tr>
                                <td>
                                    <div class="profile-cell">
                                        <img src="@($"https://ui-avatars.com/api/?name={item.MemberName}&background=random&color=fff")" class="avatar" />
                                        <div class="info">
                                            <span class="name">@item.MemberName</span>
                                            <span class="sub">@item.MobileNumber</span>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <div class="info">
                                        <span class="name">@item.BookTitle</span>
                                    </div>
                                </td>
                                <td class="date-cell">@item.DueDate.ToString("MMM dd, yyyy")</td>
                                <td>
                                    <span class="delay-badge @(item.DaysLate > 30 ? "severe" : "warning")">
                                        @item.DaysLate Days
                                    </span>
                                </td>
                                <td class="fine-cell">Egp @item.Fine.ToString("F2")</td>
                                <td><span class="status-dot"></span> Pending</td>
                                <td class="actions-cell">
                                    <button class="action-btn email" title="Send Reminder Email"><i class="fa-regular fa-envelope"></i></button>

                                    <button class="action-btn return" title="Process Return" @onclick="() => QuickReturn(item.BookId)">
                                        <i class="fa-solid fa-rotate-left"></i>
                                    </button>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="7" style="text-align:center; padding: 20px; color: #888;">
                                No overdue books found matching criteria.
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

            <div style="padding: 15px 20px; display: flex; justify-content: space-between; align-items: center; border-top: 1px solid #eee;">
                <span style="color: #888; font-size: 0.9rem;">
                    Page @CurrentPage of @TotalPages
                </span>
                <div style="display: flex; gap: 5px;">
                    <button class="btn btn-outline" style="padding: 5px 10px;" @onclick="PrevPage" disabled="@(CurrentPage == 1)">&lt;</button>
                    <button class="btn btn-outline" style="padding: 5px 10px;" @onclick="NextPage" disabled="@(CurrentPage >= TotalPages)">&gt;</button>
                </div>
            </div>
        </div>

    </main>
</div>

@code {
    private const decimal DailyFineRate = 5.00m;

    public class OverdueModel
    {
        public int BookId { get; set; } // Needed for Return
        public string MemberName { get; set; } = "Unknown";
        public string MobileNumber { get; set; } = "N/A";
        public int MemberId { get; set; }
        public string BookTitle { get; set; } = "";
        public DateTime DueDate { get; set; }
        public int DaysLate { get; set; }
        public decimal Fine { get; set; }
    }

    List<OverdueModel> OverdueList = new List<OverdueModel>();

    // -- Search & Filter State --
    private string SearchTerm { get; set; } = "";
    private string SelectedDelayFilter { get; set; } = "All Delays";
    private int CurrentPage { get; set; } = 1;
    private const int PageSize = 10;

    // -- Filter Logic --
    private IEnumerable<OverdueModel> FilteredOverdueItems
    {
        get
        {
            var query = OverdueList.AsEnumerable();

            // 1. Search Filter
            if (!string.IsNullOrWhiteSpace(SearchTerm))
            {
                query = query.Where(x =>
                    x.MemberName.Contains(SearchTerm, StringComparison.OrdinalIgnoreCase) ||
                    x.BookTitle.Contains(SearchTerm, StringComparison.OrdinalIgnoreCase));
            }

            // 2. Date Delay Filter
            if (SelectedDelayFilter == "1-7 Days")
                query = query.Where(x => x.DaysLate >= 1 && x.DaysLate <= 7);
            else if (SelectedDelayFilter == "8-30 Days")
                query = query.Where(x => x.DaysLate >= 8 && x.DaysLate <= 30);
            else if (SelectedDelayFilter == "30+ Days")
                query = query.Where(x => x.DaysLate > 30);

            // 3. Default Sort: Most Late First
            return query.OrderByDescending(x => x.DaysLate);
        }
    }

    // -- Pagination Logic --
    private IEnumerable<OverdueModel> PagedOverdueItems => FilteredOverdueItems
        .Skip((CurrentPage - 1) * PageSize)
        .Take(PageSize);

    private int TotalPages => (int)Math.Ceiling((double)FilteredOverdueItems.Count() / PageSize);

    private void NextPage() { if (CurrentPage < TotalPages) CurrentPage++; }
    private void PrevPage() { if (CurrentPage > 1) CurrentPage--; }

    protected override async Task OnInitializedAsync()
    {
        await CalculateOverdueData();
    }

    private async Task CalculateOverdueData()
    {
        var rawOverdueBooks = await BookService.GetOverdueBooksAsync();
        OverdueList.Clear();

        if (rawOverdueBooks != null)
        {
            foreach (var book in rawOverdueBooks)
            {
                var member = await MemberService.GetMemberByIdAsync(book.CurrentMemberId ?? 0);

                TimeSpan delay = DateTime.Now.Date - (book.DueDate?.Date ?? DateTime.Now.Date);
                int daysLate = delay.Days;
                if (daysLate < 0) daysLate = 0;

                decimal calculatedFine = daysLate * DailyFineRate;

                OverdueList.Add(new OverdueModel
                {
                    BookId = book.Id,
                    BookTitle = book.Title,
                    DueDate = book.DueDate ?? DateTime.Now,
                    DaysLate = daysLate,
                    Fine = calculatedFine,
                    MemberName = member != null ? member.Name : "Unknown Member",
                    MobileNumber = member != null ? member.MobileNumber : "N/A"
                });
            }
        }
    }

    private async Task QuickReturn(int bookId)
    {
        bool confirmed = await JSRuntime.InvokeAsync<bool>("confirm", "Confirm return of this overdue book? This will stop the fine count.");

        if (confirmed)
        {
            // Call the service to return the book (Assuming it accepts ID as string based on your Search page implementation)
            await BookService.ReturnBookAsync(bookId.ToString());

            // Refresh list
            await CalculateOverdueData();
        }
    }
}

