        height: 35px;
        border-radius: 50%;
    }

    .info {
        display: flex;
        flex-direction: column;
    }

        .info .name {
            font-weight: 600;
            font-size: 0.9rem;
        }

        .info .sub {
            font-size: 0.75rem;
            color: #888;
        }

    .date-cell {
        color: var(--danger);
        font-weight: 500;
        font-size: 0.9rem;
    }

    .fine-cell {
        font-weight: bold;
