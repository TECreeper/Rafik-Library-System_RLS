    }

    .orange-bg {
        background: #fff8e1;
        color: #f57c00;
    }

    .blue-bg {
        background: #e3f2fd;
        color: var(--primary);
    }

    .stat-info {
        display: flex;
        flex-direction: column;
    }

        .stat-info .label {
            font-size: 0.85rem;
            color: #888;
            display: flex;
            justify-content: center;
        }

