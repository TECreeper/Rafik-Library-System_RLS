    }

    .red-border {
        border-left-color: var(--danger);
    }

    .orange-border {
        border-left-color: var(--warning);
    }

    .blue-border {
        border-left-color: var(--primary);
    }

    .stat-icon {
        width: 50px;
        height: 50px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.2rem;
    }

    .red-bg {
        background: #fde8e8;
