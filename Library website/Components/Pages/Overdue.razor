
@page "/overdue"
@using Library_website.Components.Layout
@layout EmptyLayout
@rendermode InteractiveServer

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />

<div class="dashboard-container">

    <aside class="sidebar">
        <div class="sidebar-header">
            <h3><i class="fa-solid fa-chart-simple"></i> Library Admin</h3>
        </div>
        
        <div class="search-box-sidebar">
            <i class="fa-solid fa-magnifying-glass"></i>
            <input type="text" placeholder="Search..." />
        </div>

        <nav class="sidebar-nav">
            <p class="nav-label">Navigation</p>
            <a href="/" class="nav-item"><i class="fa-solid fa-table-columns"></i> Dashboard</a>
            <a href="/books" class="nav-item"><i class="fa-solid fa-book"></i> Books</a>
            <a href="/members" class="nav-item"><i class="fa-solid fa-users"></i> Members</a>
            <a href="/borrow" class="nav-item"><i class="fa-solid fa-arrow-right-arrow-left"></i> Borrow & Returns</a>
            
            <p class="nav-label">Alerts</p>
            <a href="/overdue" class="nav-item active alert-link">
                <i class="fa-solid fa-circle-exclamation"></i> Overdues
                <span class="sidebar-badge">@OverdueList.Count</span>
            </a>
        </nav>
    </aside>

    <main class="main-content">
        
        <header class="top-bar">
            <div class="breadcrumbs">
                <h2>Overdue Books</h2>
                <span>Home > Alerts > Overdue</span>
            </div>
            <div class="user-actions">
                <button class="btn btn-danger-outline" @onclick="SendAllReminders">
                    <i class="fa-regular fa-bell"></i> Send All Reminders
                </button>
            </div>
        </header>

        <div class="stats-grid">
            <div class="card stat-card red-border">
                <div class="stat-icon red-bg"><i class="fa-solid fa-triangle-exclamation"></i></div>
                <div class="stat-info">
                    <span class="label">Total Overdue</span>
                    <span class="value">@OverdueList.Count</span>
                </div>
            </div>

            <div class="card stat-card orange-border">
                <div class="stat-icon orange-bg"><i class="fa-solid fa-clock"></i></div>
                <div class="stat-info">
                    <span class="label">Avg. Delay</span>
                    <span class="value">12 Days</span>
                </div>
            </div>

            <div class="card stat-card blue-border">
                <div class="stat-icon blue-bg"><i class="fa-solid fa-coins"></i></div>
                <div class="stat-info">
                    <span class="label">Total Fines</span>
                    <span class="value">$@OverdueList.Sum(x => x.Fine).00</span>
                </div>
            </div>
        </div>

        <div class="filter-bar">
            <div class="search-wrapper">
                <i class="fa-solid fa-magnifying-glass"></i>
                <input type="text" placeholder="Search by member or book..." />
            </div>
            <div class="filter-actions">
                <select class="form-select">
                    <option>All Delays</option>
                    <option>1-7 Days</option>
                    <option>8-30 Days</option>
                    <option>30+ Days (Severe)</option>
                </select>
                <button class="btn btn-outline"><i class="fa-solid fa-filter"></i> Filter</button>
            </div>
        </div>

        <div class="card table-card">
            <table class="styled-table">
                <thead>
                    <tr>
                        <th>Member Details</th>
                        <th>Book Info</th>
                        <th>Due Date</th>
                        <th>Days Late</th>
                        <th>Fine ($)</th>
                        <th>Status</th>
                        <th style="text-align:center;">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in OverdueList)
                    {
                        <tr>
                            <td>
                                <div class="profile-cell">
                                    <img src="@($"https://ui-avatars.com/api/?name={item.MemberName}&background=random&color=fff")" class="avatar" />
                                    <div class="info">
                                        <span class="name">@item.MemberName</span>
                                        <span class="sub">@item.MemberPhone</span>
                                    </div>
                                </div>
                            </td>
                            <td>
                                <div class="info">
                                    <span class="name">@item.BookTitle</span>
                                    <span class="sub">ISBN: @item.ISBN</span>
                                </div>
                            </td>
                            <td class="date-cell">@item.DueDate.ToString("MMM dd, yyyy")</td>
                            <td>
                                <span class="delay-badge @(item.DaysLate > 30 ? "severe" : "warning")">
                                    @item.DaysLate Days
                                </span>
                            </td>
                            <td class="fine-cell">$@item.Fine</td>
                            <td><span class="status-dot"></span> Pending</td>
                            <td class="actions-cell">
                                <button class="action-btn email" title="Send Reminder Email"><i class="fa-regular fa-envelope"></i></button>
                                <button class="action-btn return" title="Process Return"><i class="fa-solid fa-rotate-left"></i></button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

    </main>
</div>

